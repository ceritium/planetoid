#flash
  - if flash[:notice]
    %p#flash{ :style => "color: green; width: 100%; padding: 5px; border: 1px solid green; text-align: center;" }
      = flash[:notice]

  - if flash[:error]
    %p#flash{ :style => "color: red; width: 100%; padding: 5px; border: 1px solid red; text-align: center;" }
      = flash[:error]

  - if flash[:notice] || flash[:error]
    %script{ :type => "text/javascript" }
      new Effect.Highlight('flash');

