.span-7
  %h2
    Member
.span-15.leftborder.last
  %h3
    Edit member
  - form_for(@user) do |f|
    = f.error_messages
    %p
      = f.label :name
      %br
      = f.text_field :name
    %p
      = f.label :email
      %br
      = f.text_field :email
    %p
      = f.label :blog_url
      %br
      = f.text_field :blog_url
    %p
      = f.label :twitter_user
      %br
      = TWITTER_URL
      = f.text_field :twitter_user
    %p
      = f.label :github_user
      %br
      = GITHUB_URL
      = f.text_field :github_user
    %p
      = f.label :delicious_user
      %br
      = DELICIOUS_URL
      = f.text_field :delicious_user
    %p
      = f.submit 'Update'
  = link_to 'Show', @user
  |
  = link_to 'Back', users_path
