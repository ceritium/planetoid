<div class="span-3">
	<%= image_tag(url_for_gravatar(user.email)) %>
</div>
<div class="span-12 last">
	<h3><%= h user.name %></h3>
	<p>
		<%= "Blog: " + link_to(user.blog_url.gsub("http://", ""), user.blog_url) + "<br />" if !user.blog_url.blank? %>
		<%= "Twitter: " + link_to(user.twitter_url.gsub("http://", ""), user.twitter_url) + "<br />" if !user.twitter_url.blank? %>
		<%= "Github: " + link_to(user.github_url.gsub("http://", ""), user.github_url) + "<br />" if !user.github_url.blank? %>
	</p>
</div>