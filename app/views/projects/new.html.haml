.span-7
  %h2
    Projects
.span-15.leftborder.last
  %h3
    New project
  - form_for(@project) do |f|
    = f.error_messages
    %p
      = f.label :name
      %br
      = f.text_field :name
    %p
      = f.label :description
      %br
      = f.text_area :description
    %p
      = f.label :url
      %br
      = f.text_field :url
    %p
      %label
        People involved in this project
      %br
      - User.find(:all, :order => 'name').each do |u|
        = check_box_tag("project[user_ids][]", u.id, @project.users.include?(u))
        = h u.name
        %br

    %p
      = f.submit 'Create'
  = link_to 'Back', projects_path
